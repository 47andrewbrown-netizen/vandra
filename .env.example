# ===========================================
# Vandra Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git
# ===========================================

# Database
# Format: postgresql://<username>@localhost:5432/vandra
# Find your username with: whoami
DATABASE_URL="postgresql://YOUR_USERNAME@localhost:5432/vandra"

# ===========================================
# Authentication
# ===========================================

# NextAuth Secret - REQUIRED
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=""

# NextAuth URL - Your app URL
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (optional)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# ===========================================
# AI - Claude
# ===========================================

# Anthropic API Key - REQUIRED for chat
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=""

# ===========================================
# Flight Data - Amadeus
# ===========================================

# Amadeus API - REQUIRED for flight search
# Get from: https://developers.amadeus.com
# 1. Create free account
# 2. Create app in "My Self-Service Workspace"
# 3. Copy API Key and Secret
AMADEUS_API_KEY=""
AMADEUS_API_SECRET=""
AMADEUS_BASE_URL="https://test.api.amadeus.com"

# ===========================================
# Payments - Stripe
# ===========================================

# Stripe Keys - REQUIRED for payments
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# Stripe Webhook Secret
# For local dev: stripe listen --forward-to localhost:3000/api/webhooks/stripe
# Copy the webhook signing secret it outputs
STRIPE_WEBHOOK_SECRET=""

# ===========================================
# SMS Notifications - Twilio
# ===========================================

# Twilio Credentials
# Get from: https://console.twilio.com
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# ===========================================
# Rate Limiting - Upstash Redis (optional)
# ===========================================

# Upstash Redis
# Get from: https://console.upstash.com
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# ===========================================
# Background Jobs - Upstash QStash (optional)
# ===========================================

# QStash for scheduled tasks
# Get from: https://console.upstash.com/qstash
QSTASH_TOKEN=""
QSTASH_CURRENT_SIGNING_KEY=""
QSTASH_NEXT_SIGNING_KEY=""

# ===========================================
# Cron Jobs
# ===========================================

# Secret for authenticating cron requests
# Generate with: openssl rand -hex 16
CRON_SECRET="dev-cron-secret"
